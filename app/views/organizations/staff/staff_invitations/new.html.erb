<%= render DashboardPageComponent.new do |c| %>
  <% c.with_header_title { "Invite Staff" } %>
  <% c.with_action do %>
    <%= link_to "Back to staff", staff_staff_index_path, class: "btn btn-primary" %>
  <% end %>
  <% c.with_body do %>
    <section class="container-fluid p-4">
      <!-- row -->
      <div class="row">
        <div class="offset-xl-3 col-xl-6 col-md-12 col-12">
          <!-- card -->
          <div class="card">
            <!-- card body -->
            <div class="card-body p-lg-6">
              <%= render "organizations/staff/staff_invitations/form", user: @user %>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
<% end %>
