<div class="row">
  <div class="col-md-8 mx-auto card p-5 bigger">
    <%= bootstrap_form_with model: [:staff, task] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, class: 'form-control', rows: 3 %>
      </div>
      <div class="form-group">
        <%= f.number_field :due_in_days, class: 'form-control', help: 'The task will be due this number of days after the pet is created.' %>
      </div>
      <div class="form-group">
        <%= f.check_box :recurring, 
                      { class: "form-check-input",  
                        id: "recur"} %>
      </div>
      <%= f.submit t('general.save'), class: 'btn btn-primary' %>
      <%= link_to t('general.cancel'), staff_checklist_task_templates_path, class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>
