<%# conditional formatting of so many classes requires an elegant solution
    so decided to just render the markup conditional on page %>
    
<div>
  <div class="stepper-wrapper mb-5">
    <% if page == 'select' %>
      <div class="stepper-item active">
        <div class="step-counter">1</div>
        <div class="step-name bigger">Select account</div>
      </div>
      <div class="stepper-item">
        <div class="step-counter">2</div>
        <div class="step-name bigger">Create account</div>
        <div class='d-flex align-items-center'>
          <%= image_tag('timer.png', height: '18') %>
          <p class='ms-1'>2 min</p>
        </div>
      </div>
      <div class="stepper-item">
        <div class="step-counter">3</div>
        <div class="step-name bigger">Complete profile</div>
        <div class='d-flex align-items-center'>
          <%= image_tag('timer.png', height: '18') %>
          <p class='ms-1'>10 min</p>
        </div>
      </div>

    <% elsif page == 'account' %>
      <div class="stepper-item completed">
        <div class="step-counter text-white">1</div>
        <div class="step-name d-flex flex-column align-items-center">
          <p class='me-2 bigger'>Select account</p>
          <%= image_tag('green_check.png', height: '15') %>
        </div>
      </div>
      <div class="stepper-item  active">
        <div class="step-counter">2</div>
        <div class="step-name bigger">Create account</div>
        <div class='d-flex align-items-center'>
          <%= image_tag('timer.png', height: '15') %>
          <p class='ms-1'>2 min</p>
        </div>
      </div>
      <div class="stepper-item">
        <div class="step-counter">3</div>
        <div class="step-name bigger">Complete profile</div>
        <div class='d-flex align-items-center'>
          <%= image_tag('timer.png', height: '15') %>
          <p class='ms-1'>10 min</p>
        </div>
      </div>

    <% else %>
      <div class="stepper-item completed">
          <div class="step-counter">1</div>
          <% if page == 'profile' %>
            <div class="step-name d-flex flex-column align-items-center">
              <p class='me-2 bigger'>Select account</p>
              <%= image_tag('green_check.png', height: '15') %>
            </div>
          <% end %>
      </div>
      <div class="stepper-item completed">
          <div class="step-counter">2</div>
          <div class="step-name d-flex flex-column align-items-center">
            <p class='me-2 bigger'>Create account</p>
            <%= image_tag('green_check.png', height: '15') %>
          </div>
      </div>
      <div class="stepper-item active">
          <div class="step-counter">3</div>
          <div class="step-name bigger">Complete profile</div>
          <div class='d-flex align-items-center'>
            <%= image_tag('timer.png', height: '18') %>
            <p class='ms-1'>10 min</p>
          </div>
      </div>
    <% end %>
  </div>
</div>